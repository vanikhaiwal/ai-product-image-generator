{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["vite/client"]
  },

  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
